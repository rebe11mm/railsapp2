<p id="notice"><%= notice %></p>

<div class = "container">
  <div class = "row">
    <div class="col-xs-12 col-sm-6 products">
      <%= image_tag(@product.image_url, class: "img-responsive thumbnail") %>
      <%= link_to 'Edit', edit_product_path(@product) %> |
      <%= link_to 'Back', products_path %>
    </div>
    <div class="col-xs-12 col-sm-6 products">
      <h1><%= @product.name %></h1><br>
      <%= @product.description %><br><br>
	    <strong>Price:</strong>
      <%= @product.price %><br>
    </div>
  </div>
  <p>
    <strong>Rating</strong><br>
    <%= @product.highest_rating_comment %><br>
    <%= @product.lowest_rating_comment %><br>
    <%= @product.comments.rating_desc %>
  </p>
</div>
